{
    "include": ["src/**/*"],
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "noEmit": true,
        "moduleResolution": "Node",
        "esModuleInterop": true
    }
}
